<!-- Section's CSS -->
{{ 'main-cards.css' | asset_url | stylesheet_tag }}
<!-- Section's CSS END -->
<!-- Markup -->
  <div class="row"> <div class="collections-m-su">
    <h1>{{ section.settings.heading }}</h1>
    <div class="collection-su">
      {% for block in section.blocks %}
        <div class="card-fo" style="background: {{ block.settings.example_color }};">
          <picture>
          <source media="(min-width: 1450px)" srcset="{{ block.settings.image | image_url: width: 1650 }}">
          <source media="(min-width: 1250px)" srcset="{{ block.settings.image | image_url: width: 1250 }}">
          <source media="(min-width: 1050px)" srcset="{{ block.settings.image | image_url: width: 1050 }}">
          <source media="(min-width: 950px)" srcset="{{ block.settings.image | image_url: width: 950 }}">
          <source media="(min-width: 750px)" srcset="{{ block.settings.image | image_url: width: 750 }}">
          <source media="(min-width: 550px)" srcset="{{ block.settings.image | image_url: width: 550 }}">
          <img
          src="{{ block.settings.image | image_url: width: 450 }}"
          alt="{{ block.settings.image.alt }}"
          width="{{ block.settings.width }}"
          height="{{ block.settings.height }}"
          loading="lazy">
          </picture>
          <h3>{{ block.settings.heading_card | escape }}</h3>
          <p>{{ block.settings.text | escape }}</p>
          <a href="{{ block.settings.example_collection }}">{{ block.settings.link_text_card | escape }}</a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
<!-- Markup END -->
{% schema %}
{
  "name": "Having Fun",
  "tag": "section",
  "class": "section-new",
  "max_blocks": 4,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Title",
      "default": "HAVING FUN 101"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "type": "color",
          "id": "example_color",
          "label": "Background Color",
          "default": "#00966E"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Size: 320*230 pixels"
        },
        {
          "type": "text",
          "id": "heading_card",
          "label": "Title",
          "default": "Make a scene."
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Everything you need for a great party, from decor to drinks and games."
        },
        {
          "type": "text",
          "id": "link_text_card",
          "label": "Text",
          "default": "FIND YOUR SCENE"
        },
        {
          "type": "url",
          "id": "example_collection",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Having Fun",
      "blocks": [
        {
          "type": "card"
        }
      ]
    }
  ]
}
{% endschema %}